{
    "template_name": "Game Asset Project",
    "description": "Folder structure for creating assets for games.",
    "folders": [
        {
            "name": "Concept_Art",
            "order": 1,
            "subfolders": [
                {"name": "References", "order": 1},
                {"name": "Sketches", "order": 2}
            ]
        },
        {
            "name": "Models",
            "order": 2,
            "subfolders": [
                {"name": "Blockout", "order": 1, "create_blend": true, "initial_blend": true},
                {"name": "High_Poly", "order": 2, "create_blend": true},
                {"name": "Retopology", "order": 3, "create_blend": true},
                {"name": "UV", "order": 4, "create_blend": true},
                {"name": "Exports_To_Texture", "order": 5, "create_blend": true}

            ]
        },
        {
            "name": "Textures",
            "order": 3,
            "subfolders": [
                {"name": "Texture_projects", "order": 1},
                {"name": "Baked_Textures", "order": 2},
                {"name": "PBR_Materials", "order": 3}
            ]
        },
        {
            "name": "Exports",
            "order": 4,
            "subfolders": [
                {"name": "FBX", "order": 1},
                {"name": "OBJ", "order": 2},
                {"name": "GLTF", "order": 3}
            ]
        },
        {
            "name": "Final_Renders",
            "order": 5,
            "create_blend": true
        }
    ]
}
