{
    "template_name": "Environmental Design Project",
    "description": "Folder structure for large environment/world building projects.",
    "folders": [
        {
            "name": "References",
            "order": 1,
            "subfolders": [
                {"name": "Moodboards", "order": 1},
                {"name": "Concept_Art", "order": 2}
            ]
        },
        {
            "name": "Scenes",
            "order": 2,
            "subfolders": [
                {"name": "Blocking", "order": 1, "create_blend": true, "initial_blend": true},
                {"name": "Final_Models", "order": 2, "create_blend": true}
            ]
        },
        {
            "name": "Textures",
            "order": 3,
            "subfolders": [
                {"name": "Ground_Materials", "order": 1},
                {"name": "Tree_Bark", "order": 2},
                {"name": "Water", "order": 3}
            ]
        },
        {
            "name": "Lighting",
            "order": 4,
            "subfolders": [
                {"name": "HDRIs", "order": 1},
                {"name": "Sun_Sky", "order": 2}
            ]
        },
        {
            "name": "Renders",
            "order": 5,
            "subfolders": [
                {"name": "Preview", "order": 1, "create_blend": true},
                {"name": "Final", "order": 2, "create_blend": true}
            ]
        }
    ]
}
